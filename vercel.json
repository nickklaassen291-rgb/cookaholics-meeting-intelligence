{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/send-reminders",
      "schedule": "0 7 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ],
  "functions": {
    "pages/api/transcribe.ts": {
      "maxDuration": 300
    },
    "pages/api/summarize.ts": {
      "maxDuration": 120
    },
    "pages/api/generate-report.ts": {
      "maxDuration": 120
    }
  }
}
